<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="ChatGPT Content Creation"
    sling:resourceType="cq/gui/components/authoring/dialog"
    mode="edit">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <promptGroup
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/fieldset"
                jcr:title="Prompt Group">
                <items jcr:primaryType="nt:unstructured">
                    <promptDetails
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/fieldset"
                        jcr:title="Prompt Details"
                        layout="horizontal">
                        <items jcr:primaryType="nt:unstructured">
                            <predefinedPrompts
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Predefined Prompts"
                                name="./predefinedPrompts">
                                <items jcr:primaryType="nt:unstructured">
                                    <summary
                                        jcr:primaryType="nt:unstructured"
                                        text="Summary"
                                        value="summary"/>
                                    <improve
                                        jcr:primaryType="nt:unstructured"
                                        text="Improve"
                                        value="improve"/>
                                    <extend
                                        jcr:primaryType="nt:unstructured"
                                        text="Extend"
                                        value="extend"/>
                                    <titleGeneration
                                        jcr:primaryType="nt:unstructured"
                                        text="Title Generation"
                                        value="titleGeneration"/>
                                </items>
                            </predefinedPrompts>
                            <contentSelector
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Content Selector"
                                name="./contentSelector">
                                <!-- Options can be added here -->
                            </contentSelector>
                            <textLengthSelector
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Text Length Selector"
                                name="./textLengthSelector">
                                <items jcr:primaryType="nt:unstructured">
                                    <oneLine
                                        jcr:primaryType="nt:unstructured"
                                        text="One Line"
                                        value="oneLine"/>
                                    <oneSentence
                                        jcr:primaryType="nt:unstructured"
                                        text="One Sentence"
                                        value="oneSentence"/>
                                    <oneParagraph
                                        jcr:primaryType="nt:unstructured"
                                        text="One Paragraph"
                                        value="oneParagraph"/>
                                    <severalParagraphs
                                        jcr:primaryType="nt:unstructured"
                                        text="Several Paragraphs"
                                        value="severalParagraphs"/>
                                </items>
                            </textLengthSelector>
                        </items>
                    </promptDetails>
                    <promptArea
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                        fieldLabel="Prompt Area"
                        name="./promptArea"
                        rows="5"/>
                </items>
            </promptGroup>
            <!-- Other dialog elements can be added below -->
        </items>
    </content>
</jcr:root>