	<footer jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/container">
		<items jcr:primaryType="nt:unstructured">
			<cancel
					jcr:primaryType="nt:unstructured"
					sling:resourceType="granite/ui/components/coral/foundation/button"
					text="Cancel"
					variant="default"/>
			<save
					jcr:primaryType="nt:unstructured"
					sling:resourceType="granite/ui/components/coral/foundation/button"
					text="Save"
					variant="primary"/>
		</items>
	</footer>

	<granite:toolbar jcr:primaryType="nt:unstructured"
	                 sling:resourceType="granite/ui/components/coral/foundation/toolbar">
		<items jcr:primaryType="nt:unstructured">
			<cancel
					jcr:primaryType="nt:unstructured"
					sling:resourceType="granite/ui/components/coral/foundation/button"
					text="Cancel"
					variant="default"/>
			<save
					jcr:primaryType="nt:unstructured"
					sling:resourceType="granite/ui/components/coral/foundation/button"
					text="Save"
					variant="primary"/>
		</items>
	</granite:toolbar>

</jcr:root>
