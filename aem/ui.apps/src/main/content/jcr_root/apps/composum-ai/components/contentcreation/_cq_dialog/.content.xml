									                   sling:resourceType="granite/ui/components/coral/foundation/form/select"
									                   fieldLabel="Predefined Prompts" name="./predefinedPrompts">
										<items jcr:primaryType="nt:unstructured">
											<summary jcr:primaryType="nt:unstructured"
											         sling:resourceType="nt:unstructured"
											         text="Summary"
											         value="summary">
											</summary>
											<improve jcr:primaryType="nt:unstructured"
											         sling:resourceType="nt:unstructured"
											         text="Improve"
											         value="improve">
											</improve>
											<extend jcr:primaryType="nt:unstructured"
											        sling:resourceType="nt:unstructured"
											        text="Extend"
											        value="extend">
											</extend>
											<titleGeneration jcr:primaryType="nt:unstructured"
											                 sling:resourceType="nt:unstructured"
											                 text="Title Generation" value="titleGeneration">
											</titleGeneration>
										</items>
									</predefinedPrompts>
									<promptArea jcr:primaryType="nt:unstructured"
									            sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
									            fieldDescription="The instructions to the AI that will be applied to the source text."
									            fieldLabel="Prompt Area" name="./promptArea" rows="15">
									</promptArea>
								</items>
							</promptFieldset>
						</items>
					</container>
					<container2
							jcr:primaryType="nt:unstructured"
							sling:resourceType="granite/ui/components/coral/foundation/container">
						<items jcr:primaryType="nt:unstructured">
