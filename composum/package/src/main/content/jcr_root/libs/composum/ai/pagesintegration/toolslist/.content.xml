<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="sling:Folder"
          jcr:description="Tools declaration for extending the right sidebar of Composum Pages"
          sling:resourceType="composum/pages/tools/collection">
	<reviewTool
			jcr:primaryType="nt:unstructured"
			sling:resourceType="composum/ai/pagesintegration/tools/review"
			categories="[context,standalone,edit,page,container,element]"
			iconClass="commenting-o"
			hint="ChatGPT based page review"
			title="Page review"
			order="{Long}500"/>
	<labelExtension
			jcr:primaryType="nt:unstructured"
			resourceType="composum/ai/pagesintegration/widgetextensions/labelextension"
			categories="[widget,label,standalone,edit,page,container,element]"
			order="{Long}100"/>
</jcr:root>
